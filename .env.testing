APP_ENV=testing
APP_DEBUG=true
APP_URL=http://localhost
APP_KEY=base64:AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA=

LOG_CHANNEL=null
LOG_LEVEL=warning

# --- Database (PostgreSQL via Sail) ---
DB_CONNECTION=pgsql
DB_HOST=pgsql
DB_PORT=5432
DB_DATABASE=catalog_testing
DB_USERNAME=sail
DB_PASSWORD=password

# --- Test-friendly drivers (without Redis) ---
CACHE_STORE=array
    SESSION_DRIVER=array
        QUEUE_CONNECTION=sync

# --- Mail/Broadcast/File ---
MAIL_MAILER=array
    BROADCAST_DRIVER=log
FILESYSTEM_DISK=local

# --- Extras ---
TELESCOPE_ENABLED=false
